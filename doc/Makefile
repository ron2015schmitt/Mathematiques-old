

EXEC = vdeclaration vdefinition vassignment range linspace velmath vapply vcomplex vscalarout vrelational vconcatrep vslices vfind vsort vprint vfile vdebug

DOC = $(addsuffix .md,$(EXEC))

%.md: % 
	./$* > $@

%.link_md: %.md
	@echo

include ../Makefile


doc:  $(DOC)


toc:  $(addsuffix .link_md, $(basename $(DOC)))
	@echo "# Table of Contents--mÄtricks user's guide" > README.md
	@echo "_This document was automatically generated by doc/Makefile_" >> README.md
	@echo >> README.md
	@cat $^ >> README.md
	@cat README.md


cleandocs:
	@./clean $(EXEC)

restore: 
	@git checkout -- $(addsuffix .md,$(EXEC)) $(addsuffix .link_md,$(EXEC))


# usage:
